<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Main2Activity"
android:background="@drawable/background_color">


    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Care Instructions : Broken Hand"
        android:textColor="#FBFBEC"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="•Put ice or a cold pack on your hand for 10 to 20 minutes at a time. Try to do this every 1 to 2 hours for the next 3 days (when you are awake.Put a thin cloth between the ice and your cast or splint. Keep your cast or splint dry. "
        android:textColor="#FBFBEC"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="202dp"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="•Follow the cast care instructions your doctor gives you. If you have a splint, do not take it off unless your doctor tells you to."
        android:textColor="#FBFBEC"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt4"
        android:layout_alignParentStart="true"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="•Take pain medicines exactly as directed.
 o If the doctor gave you a prescription medicine for pain, take it as prescribed.
 o If you are not taking a prescription pain medicine, ask your doctor if you can take an over-the-counter medicine."
        android:textColor="#FBFBEC"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="• Prop up your hand on pillows when you sit or lie down in the first few days after the injury.Keep your hand higher than the level of your heart. This will help reduce swelling."
        android:textColor="#FBFBEC"
        android:textSize="18dp" />

</RelativeLayout>



