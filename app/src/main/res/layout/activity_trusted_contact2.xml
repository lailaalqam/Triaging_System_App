<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".trustedContactActivity"
    android:background="@drawable/background_color">


    <EditText
        android:id="@+id/edtUId"

        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Id Of Trusted Contact"
        android:inputType="number"
        android:textColor="@color/white"

        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/edtcontactname"

        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Name For Trusted Contact"

        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Phone Number"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />



    <EditText
        android:id="@+id/editcontactorder"
        android:layout_width="348dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="234dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Contact Order"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <Button
        android:id="@+id/btnSave"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/rounded_button"
        android:ems="10"
        android:gravity="center"
        android:padding="3dp"
        android:text="Save"

        android:textColor="#FBFBEC"
        android:textSize="20dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnDel"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"

        android:ems="10"

        android:background="@drawable/rounded_button"

        android:textColor="#FBFBEC"
        android:textSize="20dp"

        android:gravity="center"
        android:padding="3dp"
        android:text="Delete User"


        android:textStyle="bold" />


</RelativeLayout>



